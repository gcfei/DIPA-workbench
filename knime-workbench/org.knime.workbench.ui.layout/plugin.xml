<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="org.knime.workbench.ui.layout"
            targetID="org.knime.workbench.editor.WorkflowEditor">
            <action
               class="org.knime.workbench.ui.layout.actions.AutoLayoutEditorAction"
               disabledIcon="icons/layout_disabled.png"
               icon="icons/layout.png"
               id="org.knime.workbench.ui.layout.autolayout"
               label="%action.label"
               style="push"
               toolbarPath="org.knime.workbench.editor.menu/group1"
               tooltip="%action.tooltip"/>
            <action
               class="org.knime.workbench.ui.layout.actions.HorizAlignLayoutEditorAction"
               disabledIcon="icons/halign_disabled.png"
               icon="icons/halign.png"
               id="org.knime.workbench.ui.layout.horizalignlayout"
               label="%action.label.0"
               style="push"
               toolbarPath="org.knime.workbench.editor.menu/group1"
               tooltip="%action.tooltip.0"/>
            <action
                  class="org.knime.workbench.ui.layout.actions.VerticAlignLayoutEditorAction"
                  disabledIcon="icons/valign_disabled.png"
                  icon="icons/valign.png"
                  id="org.knime.workbench.ui.layout.verticalignlayout"
                  label="%action.label.1"
                  style="push"
                  toolbarPath="org.knime.workbench.editor.menu/group1"
                  tooltip="%action.tooltip.1">
            </action>
      </editorContribution>
   </extension>

</plugin>
